<div class="contact-form">
  <table class="table table-striped table-bordered mt-3">
    <thead class="bg-primary-table text-white">
      <tr>
        <th>Contact Name</th>
        <th>Contact Number</th>
        <th>Email Address</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <% contacts.forEach(contact=> { %>
      <tr>
        <td>
          <%= contact.firstName %>
            <%= contact.lastName %>
        </td>
        <td>
          <%= contact.contactNumber %>
        </td>
        <td>
          <%= contact.email %>
        </td>
        <td>
          <form action="/contacts/update/<%= contact._id %>" method="GET">
            <input type="submit" value="Edit" class="btn btn-primary">
          </form>
          <!-- <a href="contacts/<%= contact._id %>">Edit</a> -->
        </td>
        <td>
          <form action="/contacts/delete/<%= contact._id %>" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger"> 
          </form>
        </td>
      </tr>
      <% }); %>
  </table>
  <a href="contacts" class="btn btn-warning"><i class="fas fa-plus-square" aria-hidden="true"></i>  Add New Contact</a>
</div>