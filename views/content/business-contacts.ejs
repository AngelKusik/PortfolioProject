<%- include('../components/header') %>

<main class="container">

  <h1 class="mt-5">Contacts</h1>
  <div class="contact-form">
    <table>
      <tr>
        <th>Contact Name</th>
        <th>Contact Number</th>
        <th>Email Address</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% contacts.forEach(contact => { %>
        <tr>
          <td><%= contact.firstName %> <%= contact.lastName %></td>
          <td><%= contact.contactNumber %></td>
          <td><%= contact.email %></td>
          <td>
            <form action="/contacts/update/<%= contact._id %>" method="GET">
              <input type="submit" value="Edit">
            </form>
            <!-- <a href="contacts/<%= contact._id %>">Edit</a> -->
          </td>
          <td>
            <form action="/contacts/delete/<%= contact._id %>" method="POST">
              <input type="submit" value="Delete">
            </form>
          </td>
        </tr>
      <% }); %>
    </table>
    <a href="contacts" class="add-button">Add New Contact</a>
  </div>
  </main>


<!-- Footer Section -->
<%- include('../components/footer') %>

